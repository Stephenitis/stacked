%h1 Search

.searchbox-board
  = form_tag search_path, method: :get do
    .field
      = text_field_tag :q, nil, placeholder: "Search for boards and cards"


    %h2 Search Results
    .search-suggestions
      %p
        Results for <b>Boards</b>
        -if @boards_name_results
          - @boards_name_results.each do |board|
            .result
              Board
              =link_to board.name, board_path(board)
      %p
        Results for <b>Cards</b>
        #container
          -if @cards_name_results
            - @cards_name_results.each do |card|
              .result-text
                Card
                =link_to card.name, card_path(card)
              .result-card
                =render partial: 'cards/card', locals: {card: card, board: nil}

      %p
        Results for <b>Twitter Users</b>
        #container
          -if @cards_twitter_results
            - @cards_twitter_results.each do |card|
              .result-text
                = card.twitter_handle
                =link_to card.name, card_path(card)
              .result-card
                =render partial: 'cards/card', locals: {card: card, board: nil}

      %p
        Results for <b>Instagram Users</b>
        #container
          -if @cards_instagram_results
            - @cards_instagram_results.each do |card|
              .result-text
                = card.instagram_handle
                =link_to card.name, card_path(card)
              .result-card
                =render partial: 'cards/card', locals: {card: card, board: nil}
